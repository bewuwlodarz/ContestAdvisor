@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManger;
@model IEnumerable<DanceCon.Models.ContestViewModel>

@{
    ViewData["Title"] = "Home Page";
    var photoPath = "~/images/" + (Model.First().PhotoPath ?? "noimages.png");

}
    <style>
        

            /* Add a hover effect (blue shadow) */
            img:hover {
                box-shadow: 0 0 10px 5px rgba(0, 140, 186, 0.5);
            }
    </style>

<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/carousel1.png" style="height: auto; width:auto;  margin: auto;object-fit: scale-down;" class="d-block w-100" alt="...">
                <div class="carousel-caption">
                    <h3></h3>
                    <p>List of Contests <a>@Html.ActionLink("Contests", "Contestlist","Contest" ,new { } ,htmlAttributes: new { @class = "btn btn-outline-primary", @role = "button" })</a></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel2.png" style="height: auto; width:auto; margin: auto; object-fit: scale-down;" class="d-block w-100" alt="...">
                <div class="carousel-caption">
                    <h3></h3>
                    <p>Add your Contest <a>@Html.ActionLink("Add Contest", "Add", "Contest", new { }, htmlAttributes: new { @class = "btn btn-outline-primary", @role = "button" })</a></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel3.png" style="height: auto;width:auto;  margin: auto; object-fit: scale-down;" class="d-block w-100" alt="...">
                <div class="carousel-caption">
                    <h3></h3>
                    <p>Register on Events <a>@Html.ActionLink("+Participant", "UserPart", "Contest", new { }, htmlAttributes: new { @class = "btn btn-outline-primary", @role = "button" })</a></p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container">
    <h1 class="text-lg-center">Soonest Contests</h1>
    <div class="row row-cols-2 row-cols-md-2">
        <div class="col mb-4">
