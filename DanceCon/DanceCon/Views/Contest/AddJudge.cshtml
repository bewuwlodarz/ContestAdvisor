

@{
    ViewData["Title"] = "AddJudge";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=devicewidth" />
    
    <script type="text/javascript">
        function GetDynamicTextbox(value) {
            return '<input type="text" name="texttest" style="width:200px;" /><input type="button" onclick="RemoveTextBox(this)" value="Remove"/>'
        }
        function AddTextBox() {
            var div = document.createElement('DIV');
            div.innerHTML = GetDynamicTextbox("");
            document.getElementById("divCont").appendChild(div);
        }
        function RemoveTextBox(div) {
            document.getElementById("divCont").removeChild(div.parentNode);
        }
    </script>
</head>

<body>
    <div class="jumbotron">
        @{
            var data = (ContestViewModel)ViewData["Massage"];

        }
        <h1 class="display-3 text-center">Add Judges of @data.Title</h1>
        <p class="lead text-center">This is time to add your judges, remember that you have to complete everything, then you see your event.</p>
    </div>

    <div>
        <form method="post" action="AddJudge">
         
            <tr>


                <div id="divCont">

                    <div><input type="text" name="texttest" style="width:200px;" /><input type="button" onclick="AddTextBox()" value="Add Judges" /></div>

                </div>
                <br />

                <input type="submit" value="submit" />

        </form>
        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-info" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
        </div>

</body>
</html>
